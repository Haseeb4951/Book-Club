<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/backbtn" />

    <TextView
        android:id="@+id/textViewAddPdfTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Book"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/editTextPdfTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAddPdfTitle"
        android:hint="Book Title"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/editTextPdfDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPdfTitle"
        android:hint="Book Description"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/textViewPdfCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPdfDescription"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Book Category"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/edit_text_bg"
        android:drawableEnd="@drawable/ic_drop_down"
        android:drawableRight="@drawable/ic_drop_down"/>

    <Button
        android:id="@+id/btnPickPdfFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPdfCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Pick Book PDF"/>


    <Button
        android:id="@+id/btnAddPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPickPdfFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Confirm"/>

</RelativeLayout>

